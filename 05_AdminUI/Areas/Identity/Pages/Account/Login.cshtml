@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Giriş";
}

<link href="~/css/signin.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<main class="form-signin w-100 m-auto rounded-2 border-2">
    
    <form method="post">

        <div class="w-100 d-flex justify-content-center">
                <img src="~/img/abb_logo.png" height="100">
        </div>
        <div class="form-floating">
            <input asp-for="Input.Username" class="form-control" id="floatingInput" placeholder="Kullanıcı Adı">
            <label for="floatingInput">Kullanıcı Adı</label>
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifre">
            <label for="floatingPassword">Şifre</label>
        </div>
         
        <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
    </form>
</main>

